{
  "openapi": "3.0.3",
  "info": {
    "title": "Issuer server",
    "description": "API for issuser server"
  },
  "tags": [
    {
      "name": "auth",
      "description": "API for authentication"
    },
    {
      "name": "issuers",
      "description": "API for issuers"
    },
    {
      "name": "claims",
      "description": "API for Claims"
    },
    {
      "name": "schemas",
      "description": "API for schemas"
    },
    {
      "name": "registries",
      "description": "API for registries"
    },
    {
      "name": "networks",
      "description": "API for networks"
    }
  ],
  "paths": {
    "/api/auth/login/{issuerId}": {
      "post": {
        "tags": [
          "auth"
        ],
        "summary": "API login",
        "description": "API login",
        "parameters": [
          {
            "name": "issuerId",
            "in": "path",
            "description": "issuerId",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Login"
              }
            }
          },
          "required": true
        },
        "responses": {
          "default": {
            "description": "API response",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/APIResponse"
                }
              }
            }
          }
        }
      }
    },
    "/api/authen/verify-token/{issuerId}": {
      "post": {
        "tags": [
          "auth"
        ],
        "summary": "API Verify Token",
        "description": "API Verify Token",
        "parameters": [
          {
            "name": "issuerId",
            "in": "path",
            "description": "issuerId",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "requestBody": {
          "description": "Your jwz token",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/VerifyToken"
              }
            }
          },
          "required": true
        },
        "responses": {
          "default": {
            "description": "API response",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/APIResponse"
                }
              }
            }
          }
        }
      }
    },
    "/api/issuers/register": {
      "post": {
        "tags": [
          "issuers"
        ],
        "summary": "Register new issuers",
        "description": "Register new issuers",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Holder"
              }
            }
          }
        },
        "responses": {
          "default": {
            "description": "API response",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/APIResponse"
                }
              }
            }
          }
        }
      }
    },
    "/api/issuers/{issuerId}/restore-last-state": {
      "put": {
        "security": [
          {
            "Authorization": ["read", "write"]
          }
        ],
        "tags": [
          "issuers"
        ],
        "summary": "Restore last statetrantition",
        "description": "API restore last statetrantition",
        "parameters": [
          {
            "name": "issuerId",
            "in": "path",
            "description": "issuerId",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "default": {
            "description": "API response",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/APIResponse"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "APIResponse": {
        "type": "object",
        "properties": {
          "apiCode": {
            "type": "integer",
            "format": "int64"
          },
          "message": {
            "type": "string"
          },
          "data": {
            "type": "object"
          }
        }
      },
      "Login": {
        "type": "object",
        "properties": {
          "proof": {
            "type": "object"
          },
          "public_signals": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "circuitId": {
            "type": "string"
          },
          "schema": {
            "type": "string"
          },
          "algorithm": {
            "type": "string"
          },
          "payload": {
            "type": "string"
          }
        }
      },
      "VerifyToken": {
        "type": "object",
        "properties": {
          "token": {
            "type": "string"
          }
        }
      },
      "Holder": {
        "type": "object",
        "properties": {
          "pubkeyX": {
            "type": "string",
            "example": "1234"
          },
          "pubkeyY": {
            "type": "string",
            "example": "1234"
          }
        }
      }
    },
    "securitySchemes": {
      "Authorization": {
        "in": "header",
        "name": "Authorization",
        "type": "apiKey",
        "description": "Token authorization"
      }
    }
  }
}