  "components": {
    "schemas": {
      "APIResponse": {
        "type": "object",
        "properties": {
          "apiCode": {
            "type": "integer",
            "format": "int64"
          },
          "message": {
            "type": "string"
          },
          "data": {
            "type": "object"
          }
        }
      },
      "Login": {
        "type": "object",
        "properties": {
          "proof": {
            "type": "object"
          },
          "public_signals": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "circuitId": {
            "type": "string"
          },
          "schema": {
            "type": "string"
          },
          "algorithm": {
            "type": "string"
          },
          "payload": {
            "type": "string"
          }
        }
      },
      "VerifyToken": {
        "type": "object",
        "properties": {
          "token": {
            "type": "string"
          }
        }
      },
      "Holder": {
        "type": "object",
        "properties": {
          "pubkeyX": {
            "type": "string",
            "example": "1234"
          },
          "pubkeyY": {
            "type": "string",
            "example": "1234"
          }
        }
      },
      "Operator": {
        "type": "object",
        "properties": {
          "operatorId": {
            "type": "string",
            "example": "1234"
          }
        }
      },
      "Signature": {
        "type": "object", 
        "properties": {
          "signature": {
            "type": "object",
            "properties": {
              "challenge": {
                "type": "string",
                "example": "2101161577681291238529280264703639496358080169515952608708589558013231430525"
              },
              "challengeSignatureR8x": {
                "type": "string",
                "example": "11890003505821740942342827466490219951374204720747371650777335503316016714756"
              },
              "challengeSignatureR8y": {
                "type": "string",
                "example": "4572047267382586032939239839765622365092726649604288788632301595003251991693"
              },
              "challengeSignatureS": {
                "type": "string",
                "example": "2655604807051308811171436613928479239441325277756998151249502848413329977634"
              }
            }
          }
        }
      },
      "Network": {
        "type": "object",
        "properties": {
          "chainId": {
            "type": "string",
            "example": "chainId"
          },
          "name": {
            "type": "string",
            "example": "name"
          },
          "shotName": {
            "type": "string",
            "name": "shotName"
          }
        }
      },
      "Schema": {
        "type": "object",
        "properties": {
          "@name": {
            "type": "string"
          },
          "@type": {
            "type": "string"
          },
          "@context": {
            "type": "array",
            "items": {
              "type": "string"
            }
          }
        }
      }
    },
    "securitySchemes": {
      "Authorization": {
        "in": "header",
        "name": "Authorization",
        "type": "apiKey",
        "description": "Token authorization"
      }
    }
  }
